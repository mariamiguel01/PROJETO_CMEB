<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">

        <EditText
            android:id="@+id/fragment_webvideo_uriEditText"
            android:layout_width="match_parent"
            android:layout_height="682dp"
            android:hint="Video URI"
            android:text='https://www.youtube.com/watch?v=5R54QoUbbow&amp;list=PPSV' />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Play"
            android:id="@+id/fragment_webvideo_play" />

        <VideoView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/fragment_webvideo_videoView"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>